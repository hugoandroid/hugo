<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.hugo.ui.BasicEndActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_root2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"/>
        <ImageView
            android:id="@+id/iv_root"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:alpha="0"
            app:layout_collapseMode="parallax"
            android:background="@mipmap/bg_zuowen_04"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="155dp"
            android:transitionName="image"
            android:src="@mipmap/bg_zuowen_01"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:padding="10dp"
            android:alpha="0"
            android:minHeight="800dp"
            android:text="@string/large_text" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:padding="10dp"
            android:textColor="#d30"
            android:textSize="18dp"
            android:layout_marginLeft="90dp"
            android:alpha="0"
            android:text="hugo_test_title" />
    </FrameLayout>
</ScrollView>
